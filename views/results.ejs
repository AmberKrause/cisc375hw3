<!DOCTYPE html>
<head>
	<meta charset="utf-8"/>
	<meta name="viewport" content="width=device-width, initial-scale=1"/>
	<title>Search Results</title>
	<style type="text/css">
		html{
			font-size: 62.5%;
		}

		table, tr, td {
			border-style: solid;
		}

		tr {
			font-size: 2rem;
		}

		form {
			margin-bottom: 10px;
		}
		.display-none { position: absolute; top: 2%; left: 25%; font-size:5rem; display: none;}
		.heartBeatDisplay {display: inline-block; animation:heartBeat 1s; animation-iteration-count: infinite;}
		@keyframes heartBeat {from {transform: scale(1.0);} to {transform: scale(1.5);} }
	</style>
	<script type="text/javascript">
		function unload() {
    		document.getElementById('loadingItem').classList.add('heartBeatDisplay')
		}
	</script>
</head>
<body onbeforeunload="return unload()">
	<div id="loadingItem" class="display-none">Loading</div>
	<div id="container">
		<h1>Results</h1>

		<form action="/" method="GET">
			<input type="submit" value="Back to Search">
		</form>

    <table>
    	<tr>
				<% if(sqlHolder[0].type==='title') { %>
	    		<th>Title</th>
	    		<th>Type</th>
	    		<th>Start Year</th>
	    		<th>End Year</th>
				<% } else {%>
					<th>Name</th>
	    		<th>Professions</th>
	    		<th>Birth Year</th>
	    		<th>Death Year</th>
				<% } %>
    	</tr>
			<% sqlHolder.forEach(function(x){%>
				<% if(x.type==='title') { %>
					<tr>
						<td><a class='loaderTag' href="/title?id=<%= x.tconst %>"><%= x.primary_title %></a></td>
						<td><%= x.title_type %></td>
						<td><%= x.start_year %></td>
						<td><%= x.end_year %></td>
					</tr>
				<% } else {%>
					<tr>
						<td><a class='loaderTag' href="/person?id=<%= x.nconst %>"><%= x.primary_name %></a></td>
						<td><%= x.primary_profession %></td>
						<td><%= x.birth_year %></td>
						<% if(x.death_year===null) { %>
						<td>present</td>
						<% } else { %>
						<td><%= x.death_year %></td>
						<% } %>
					</tr>
				<% } %>
			<% }) %>
		</table>



	</div>
	<div id="loadingItem" class="display-none">Loading</div>
</body>
</html>
